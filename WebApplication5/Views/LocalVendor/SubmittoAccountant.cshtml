
@{
    Layout = "~/Views/Shared/_LocalVendorLayout.cshtml";

    ViewBag.Title = "SubmittoAccountant";
}

<h2>Upload PO & DC Documents</h2>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}
@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">@ViewBag.Error</div>
}

@using (Html.BeginForm("UploadDocuments", "LocalVendor", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.Hidden("requestId", ViewBag.RequestID)

    <div class="mb-3">
        <label for="poDocument" class="form-label">Purchase Order (PO)</label>
        <input type="file" name="poDocument" id="poDocument" class="form-control" accept=".pdf,.doc,.docx" required />
    </div>

    <div class="mb-3">
        <label for="dcDocument" class="form-label">Delivery Challan (DC)</label>
        <input type="file" name="dcDocument" id="dcDocument" class="form-control" accept=".pdf,.doc,.docx" required />
    </div>

    <button type="submit" class="btn btn-primary">Upload and Send to Accountant</button>
}
