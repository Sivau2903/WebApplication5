@{
    Layout = "~/Views/Shared/_LocalPDLayout.cshtml"; // or your actual layout
    var showPopup = TempData["ShowSuccessPopup"] != null;
    var poNumber = TempData["PONumber"]?.ToString();
}

@section Scripts {
    @if (showPopup)
    {
        <script>
            window.onload = function () {
                Swal.fire({
                    title: 'Success!',
                    text: 'Purchase Order @poNumber sent successfully.',
                    icon: 'success',
                    confirmButtonText: 'OK'
                }).then((result) => {
                    if (result.isConfirmed) {
                        window.location.href = '@Url.Action("Materials", "LocalPurchaseDepartment")';
                    }
                });
            };
        </script>
    }
}

