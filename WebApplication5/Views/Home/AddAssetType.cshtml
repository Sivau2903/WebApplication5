@model WebApplication5.Models.AssetType
@{
    Layout = "~/Views/Shared/_StoreAdminLayout.cshtml";
    ViewBag.Title = "AddAssetType";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add New Asset Type</title>

    <!-- Bootstrap & Toastr CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" rel="stylesheet" />

    <style>
        body {
            background-color: #f8f9fa;
            padding: 20px;
        }

        .container {
            max-width: 700px;
            margin: auto;
        }

        .form-control {
            height: 35px;
        }

        .btn-small {
            height: 35px;
            width: 35px;
            padding: 0;
            font-size: 20px;
            text-align: center;
            line-height: 30px;
        }

        .category-group {
            display: flex;
            align-items: center;
            gap: 10px;
            margin-bottom: 10px;
        }

        .category-container {
            display: flex;
            flex-direction: column;
            gap: 10px;
        }

            .category-container input {
                flex: 1;
            }
    </style>
</head>
<body>


    <div class="container mt-4">
        <div class="card shadow-sm">
            <div class="card-header">
                <h3 class="mb-0">Add New Asset Type</h3>
            </div>
            <div class="card-body">
                @using (Html.BeginForm("AssetTypeView", "Home", FormMethod.Post, new { @class = "needs-validation", novalidate = "novalidate" }))
                {
                    @Html.AntiForgeryToken()

                    <div class="mb-3">
                        @Html.LabelFor(model => model.AssetType1, new { @class = "form-label fw-bold" })
                        @Html.TextBoxFor(model => model.AssetType1, new { @class = "form-control", required = "required", placeholder = "Enter Asset Type" })
                        @Html.ValidationMessageFor(model => model.AssetType1, "", new { @class = "text-danger" })
                    </div>

                    <div class="d-flex justify-content-end">
                        <a href="@Url.Action("AddAssetType", "Home")" class="btn btn-light me-2">Cancel</a>
                        <button type="submit" class="btn btn-dark">Save</button>
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Toastr CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />

    <!-- jQuery (required for Toastr) -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <!-- Toastr JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>


    @if (TempData["SuccessMessage"] != null)
    {
        <script type="text/javascript">
            $(document).ready(function () {
                toastr.options = {
                    closeButton: true,
                    progressBar: true,
                    positionClass: "toast-top-center",
                    showDuration: "300",
                    hideDuration: "1000",
                    timeOut: "5000"
                };

                // Example Success Notification
                toastr.success("Asset type added successfully!");
            });

        </script>
    }

</body>
</html>


