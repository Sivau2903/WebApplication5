    }

    table {
        width: 100%;
        height: 50px;
        border-collapse: collapse;
        margin-top: 10px;
    }

    th, td {
        border: 1px solid black;
        padding: 6px;
        text-align: left;
        width:auto;
    }

    .no-border {
        border: none;
    }

    .signature {
        margin-top: 50px;
        text-align: right;
    }

    .btn-secondary {
        margin-top: 30px;
        text-align: center;
        background-color:blue;
    }




    footer{
        position:fixed;
    }
    .input-no-border {
        width: 100%;
        border: none;
        border-bottom: 1px solid black;
    }

    @@media print {
        body * {
            visibility: hidden;
        }

        .po-map, .po-map * {
            visibility: visible;
        }

        .po-map {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
        }

        .btn-secondary {
            display: none;
        }
    }

</style>
