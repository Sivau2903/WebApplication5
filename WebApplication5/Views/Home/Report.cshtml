


@model List<WebApplication5.Models.MaterialIssueReportViewModel>


@{
    ViewBag.Title = "Report";
}


<h2>Material Issue Report</h2>

<form method="get">
    From: <input type="date" name="startDate" required />
    To: <input type="date" name="endDate" required />
    <button type="submit">Get Report</button>
</form>

@if (Model != null && Model.Any())
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Material</th>
                <th>Issued Date</th>
                <th>Total Issued</th>
                <th>Closing Quantity</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.MaterialName</td>
                    <td>@item.IssuedDate.ToString("dd-MM-yyyy")</td>
                    <td>@item.TotalIssued</td>
                    <td>@item.ClosingQuantity</td>
                </tr>
            }
        </tbody>
    </table>

    <div class="text-lg-center mt-3">
        <button type="button" class="btn btn-secondary" onclick="window.print()">Print PO</button>
    </div>
}
else
{
    <p>No data available for the selected date range.</p>
}
