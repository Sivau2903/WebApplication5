                                <ul class="dropdown-menu d-none" aria-labelledby="hODRequests">
                                    <li><a class="dropdown-item" href="@Url.Action("HODRequests", "Home")">HOD Requests</a></li>
                                    <li><a class="dropdown-item" href="@Url.Action("IssuedRequests", "Home")">HODIssued Requests</a></li>

