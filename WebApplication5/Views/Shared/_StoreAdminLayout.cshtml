                                    </li>
                                  
                                </ul>*@
                            @*</li>*@
                        </ul>
                    </li>


                    @*<li class="nav-item"><a class="nav-link" href="@Url.Action("PODetails", "Home")">PODetails</a></li>*@


                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="PODetails" role="button">Material List</a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="@Url.Action("Materials", "Home")">Master List</a></li>
                            <li><a class="dropdown-item" href="@Url.Action("ExpiredMaterials", "Home")">Expired List</a></li>
                            @*<li><a class="dropdown-item" href="@Url.Action("Report", "Home")">Issue Report</a></li>*@
