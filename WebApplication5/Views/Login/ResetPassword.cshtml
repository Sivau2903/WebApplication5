@{
    Layout = "~/Views/Shared/_ResetLayout.cshtml";
    ViewBag.Title = "Reset Password";
}

<div class="reset-password-container">
    <div class="card shadow-lg">
        <div class="card-body p-5">
            <h2 class="card-title text-center mb-4 fw-bold text-primary">Reset Your Password</h2>

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show text-center" role="alert">
                    @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            @if (TempData["Message"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show text-center" role="alert">
                    @TempData["Message"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            @using (Html.BeginForm("ResetPassword", "Login", FormMethod.Post, new { @class = "form-horizontal" }))
            {
                @Html.AntiForgeryToken()

                <div class="mb-4">
                    <label for="oldPassword" class="form-label fw-bold">Old Password</label>
                    <input type="password" name="oldPassword" id="oldPassword" class="form-control form-control-lg" placeholder="Enter Old Password" required />
                </div>

                <div class="mb-4">
                    <label for="newPassword" class="form-label fw-bold">New Password</label>
                    <input type="password" name="newPassword" id="newPassword" class="form-control form-control-lg" placeholder="Enter New Password" required />
                </div>

                <div class="mb-4">
                    <label for="confirmPassword" class="form-label fw-bold">Confirm New Password</label>
                    <input type="password" name="confirmPassword" id="confirmPassword" class="form-control form-control-lg" placeholder="Re-enter New Password" required />
                </div>

                <div class="d-grid">
                    <button type="submit" class="btn btn-success btn-lg">Reset Password</button>
                </div>
            }
        </div>
    </div>
</div>

<style>
.reset-password-container {
    max-width: 500px;
    margin: 10px auto;
    padding: 20px;
   
}

.card {
    border: none;
    border-radius: 12px;
    background-color: #ffffff;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.15);
}

.card-title {
    color: #28a745; /* Green to match btn-success */
    font-size: 1.8rem;
    letter-spacing: 0.5px;
}

.form-label {
    color: #333;
    font-size: 1rem;
}

.form-control {
    border-radius: 8px;
    border: 1px solid #ced4da;
    padding: 12px;
    transition: border-color 0.3s ease, box-shadow 0.3s ease;
}

.form-control:focus {
    border-color: #28a745;
    box-shadow: 0 0 8px rgba(40, 167, 69, 0.2);
}

.btn-success {
    border-radius: 8px;
    padding: 12px;
    font-size: 1.1rem;
    font-weight: 500;
    background-color: #28a745;
    border: none;
    transition: background-color 0.3s ease, transform 0.2s ease;
}

.btn-success:hover {
    background-color: #218838;
    transform: translateY(-2px);
}

.alert {
    border-radius: 8px;
    padding: 12px;
    font-size: 0.95rem;
    margin-bottom: 20px;
}

.alert-success {
    background-color: #d4edda;
    color: #155724;
}

.alert-danger {
    background-color: #f8d7da;
    color: #721c24;
}

.d-grid {
    display: grid;
}

footer {
    position: fixed;
    bottom: 0;
    width: 100%;
    background-color: #f8f9fa;
    padding: 10px 0;
    text-align: center;
    font-size: 0.9rem;
    color: #6c757d;
}

@@media (max-width: 576px) {
    .reset-password-container {
        margin: 20px;
        padding: 10px;
    }

    .card-body {
        padding: 20px;
    }

    .card-title {
        font-size: 1.5rem;
    }

    .btn-success {
        font-size: 1rem;
        padding: 10px;
    }
}
</style>