@{
    Layout = "~/Views/Shared/_ResetLayout.cshtml"; // or your actual layout
    ViewBag.Title = "Forgot Password";
}

<div class="forgot-password-container">
    <div class="card shadow-lg">
        <div class="card-body p-5">
            <h2 class="card-title text-center mb-4 fw-bold text-primary">Reset Password</h2>

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show text-center" role="alert">
                    @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            @if (TempData["Message"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show text-center" role="alert">
                    @TempData["Message"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            @using (Html.BeginForm("ForgotPassword", "Login", FormMethod.Post, new { @class = "form-horizontal" }))
            {
                @Html.AntiForgeryToken()

                <div class="mb-4">
                    <label for="email" class="form-label fw-bold">Enter your Email ID</label>
                    <input type="email" name="email" id="email" class="form-control form-control-lg" placeholder="Enter your registered Email ID" required />
                </div>

                <div class="d-grid">
                    <button type="submit" class="btn btn-primary btn-lg">Send OTP</button>
                </div>
            }
        </div>
    </div>
</div>

<style>
.forgot-password-container {
    max-width: 450px;
    margin: 80px auto;
    padding: 20px;
}

.card {
    border: none;
    border-radius: 12px;
    background-color: #ffffff;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.15);
}

.card-title {
    color: red;
    font-size: 1.8rem;
    letter-spacing: 0.5px;
}
h2{
    color:darkred;
}

.form-label {
    color: #333;
    font-size: 1rem;
}

    .form-control {
        border-radius: 8px;
        border: 1px solid #ced4da;
        padding: 12px;
        font-size: 0.8rem;
        transition: border-color 0.3s ease, box-shadow 0.3s ease;
    }

.form-control:focus {
    border-color: #007bff;
    box-shadow: 0 0 8px rgba(0, 123, 255, 0.2);
}

.btn-primary {
    border-radius: 8px;
    padding: 12px;
    font-size: 1.1rem;
    font-weight: 500;
    background-color: #007bff;
    border: none;
    transition: background-color 0.3s ease, transform 0.2s ease;
}

.btn-primary:hover {
    background-color: #0056b3;
    transform: translateY(-2px);
}

.alert {
    border-radius: 8px;
    padding: 12px;
    font-size: 0.95rem;
    margin-bottom: 20px;
}

.alert-success {
    background-color: #d4edda;
    color: #155724;
}

.alert-danger {
    background-color: #f8d7da;
    color: #721c24;
}

.d-grid {
    display: grid;
}
h2{
    color:red;
}

footer {
    position: fixed;
    bottom: 0;
    width: 100%;
    background-color: #f8f9fa;
    padding: 10px 0;
    text-align: center;
    font-size: 0.9rem;
    color: #6c757d;
}

@@media (max-width: 576px) {
    .forgot-password-container {
        margin: 20px;
        padding: 10px;
    }

    .card-body {
        padding: 20px;
    }

    .card-title {
        font-size: 1.5rem;
    }

    .btn-primary {
        font-size: 1rem;
        padding: 10px;
    }
}
</style>